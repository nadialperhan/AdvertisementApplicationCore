@model List<AdvertisementListDto>
@{
    Layout = "_Layout";
}
<div class="mt-3 container-fluid">
    @{
        if (Model?.Count > 0)
        {
            <div class="text-end my-3 p-1">
                <a asp-action="Create" asp-controller="Application">Yeni İlan Oluştur</a>
            </div>

            <table class="table table-sm table-hover table-striped">
                <thead>
                    <tr>
                        <th>İlan Adı</th>
                        <th>İlan Tarihi</th>
                        <th>Durum</th>
                        <th></th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.CreatedDate.ToString("MM/dd/yyyy")</td>
                            <td>@(item.Status?"Aktif":"Pasif")</td>

                            <td>
                                <a asp-action="Update" asp-controller="Application" asp-route-Id="@item.Id">Güncelle</a>
                                <a asp-action="Remove" asp-controller="Application" asp-route-Id="@item.Id">Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="text-end my-3 p-1">
                <a asp-action="Create" asp-controller="Application">Yeni İlan Oluştur</a>

            </div>
            <div class="mb-3 text-center" lead>
                başvuru bulunmamaktadır
            </div>
        }
    }
</div>