@model AppUserLoginDto
@{
    Layout = "_Layout";
}
<div class="mt-3">
    <form asp-action="SignIn" asp-controller="Account" method="post" class="p-4 w-75 mx-auto">

       
        <div class="mb-3">
            <label>Kullanıcı Adı:</label>
            <input asp-for="@Model.UserName" class="form-control" />
        </div>
       
        <div class="mb-3">
            <label>Şifre:</label>
            <input type="password" asp-for="@Model.PassWord" class="form-control" />
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" asp-for="@Model.RememberMe" >
            <label class="form-check-label" for="RememberMe">
                Beni Hatırla
            </label>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Giriş Yap</button>
        </div>
        <div class="text-danger" asp-validation-summary="All">

        </div>
    </form>
</div>

