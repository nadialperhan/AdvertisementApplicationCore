@model UserCreateModel
@{
    Layout = "_Layout";
}
<div class="mt-3">
    <form asp-action="SignUp" asp-controller="Account" method="post" class="p-4 w-75 mx-auto">

        <div class="mb-3">
            <label>Adınız:</label>
            <input asp-for="@Model.FirstName" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Soyadınız:</label>
            <input asp-for="@Model.SurName" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Kullanıcı Adı:</label>
            <input asp-for="@Model.UserName" class="form-control" />
        </div>
        <div class="mb-3">
            <label>EMail</label>
            <input asp-for="@Model.Email" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Tel No:</label>
            <input asp-for="@Model.PhoneNumber" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Şifre:</label>
            <input type="password" asp-for="@Model.Password" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Şifre Tekrar:</label>
            <input type="password" asp-for="@Model.ConfirmPassword" class="form-control" />
        </div>
        <div class="mb-3">
            <select class="form-select" asp-items="@Model.Genders" asp-for="@Model.GenderID">
                <option value="0">Bir Cinsiyet Seçin</option>
            </select>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
        <div class="text-danger" asp-validation-summary="All">

        </div>
    </form>
</div>

